<h1>Listing websites</h1>

<table>
  <tr>
    <th>Most reliable</th>
    <th>Most reason</th>
    <th>Least reliable</th>
    <th>Least reason</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @websites.each do |website| %>
  <tr>
    <td><%= website.most_reliable %></td>
    <td><%= website.most_reason %></td>
    <td><%= website.least_reliable %></td>
    <td><%= website.least_reason %></td>
    <td><%= link_to 'Show', website %></td>
    <td><%= link_to 'Edit', edit_website_path(website) %></td>
    <td><%= link_to 'Destroy', website, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

